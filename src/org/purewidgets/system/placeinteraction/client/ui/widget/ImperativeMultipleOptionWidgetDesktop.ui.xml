<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.main {
			display: inline-table;
			font-family: inherit;
			font-size: inherit;
			border: 1px solid black;
			border-radius: 5px;
			width: 300px;
			padding: 5px;
			margin: 5px;
		}
		
		.icon {
			width: 64px;
			height: 64px;
			margin-right: 15px;
		}
		
		.button {
			width: 64px;
			font-family:inherit;
			font-size:inherit;
		}
		
		.leftPanel {
			width: 200px;
			height:100%;
		}
		
		.rightPanel {
			height: 100%;
			width: 100px;
			margin-left: 5px;
		}
		
		.rightPanel td {
			text-align:center;
		}
		
		.optionsListBox {
			font-family:inherit;
			font-size:inherit;
			width: 100%;
		}
	</ui:style>
	<g:HorizontalPanel styleName="{style.main}" ui:field="mainHorizontalPanel" >
			<g:cell>
				<g:VerticalPanel styleName="{style.leftPanel}" >
       				<g:cell verticalAlignment="top">
       					<g:Label ui:field="descriptionLabel"> </g:Label>
       				</g:cell>
       				<g:cell verticalAlignment="bottom" width="100%">
       					<g:ListBox ui:field="optionsListBox" styleName="{style.optionsListBox}"> </g:ListBox>
       				</g:cell>
       			</g:VerticalPanel>
    		</g:cell>
    		<g:cell >
    			<g:VerticalPanel styleName="{style.rightPanel}" >
       				<g:cell verticalAlignment="top">
       					<g:Button ui:field="actionButton" styleName="{style.button}"></g:Button>
       				</g:cell>
       				<g:cell verticalAlignment="bottom">
       					<g:Image styleName="{style.icon}" ui:field="iconImage"/> 
       				</g:cell>
       			</g:VerticalPanel>
    		</g:cell>
	</g:HorizontalPanel>
</ui:UiBinder> 