<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.main {
			font-family:inherit;
			font-size:inherit;
			border: 1px solid black;
			border-radius: 5px;
			width: 90%;
			padding: 5px;
			margin: 5px auto 5px auto;
		}
		
		
		.icon {
			width: 64px;
			height: 64px;
			margin-right: 15px;
		}
		.button {
			font-size: inherit;
			font-family: inherit;
			width: 7em;
			height: 3em;
		}
		
		.optionsListBox {
			font-family:inherit;
			font-size:inherit;
			width: 100%;
		}
	</ui:style>
	<g:VerticalPanel styleName="{style.main}" ui:field="mainHorizontalPanel" >
		<g:cell verticalAlignment="top" width="100%">
			<g:Label ui:field="descriptionLabel"/>
       	</g:cell>
       	
       	<g:cell verticalAlignment="middle" horizontalAlignment="center" >
       		<g:ListBox ui:field="optionsListBox" styleName="{style.optionsListBox}" /> 
       	</g:cell>
       	
   		<g:cell verticalAlignment="bottom" horizontalAlignment="center">
       		<g:Button ui:field="actionButton" styleName="{style.button}"/>
       	</g:cell>
       
    		<!--  unused by this template -->
    	<g:Image styleName="{style.icon}" ui:field="iconImage"/> 
	</g:VerticalPanel>
</ui:UiBinder> 