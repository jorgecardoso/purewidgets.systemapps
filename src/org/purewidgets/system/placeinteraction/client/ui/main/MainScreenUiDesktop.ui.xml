<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p="urn:import:org.purewidgets.system.placeinteraction.client.ui.login">
	<ui:style>

	.content {
		width: 100%;
		height: 100%;
		margin:0px;
		padding:0px;	
	}
	
	.loginBar {
		text-align:right;
		padding: 5px 10px 5px 0px;
		background-color: #C0C0C0;
		color: white;
	}
	.features {
		/*border:1px solid red;*/
		height: 90%;
		margin: 0px; /*5px 5px 5px 5px;*/
		/*margin-top:0px;
		margin-bottom:0px;
		width:100%;
		height:100%;*/
		
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.content}" ui:field="mainContent">
		<p:LoginUi styleName="{style.loginBar}" ui:field="loginUi"> </p:LoginUi>
		<g:HTMLPanel styleName="{style.features}" ui:field="features"> </g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 