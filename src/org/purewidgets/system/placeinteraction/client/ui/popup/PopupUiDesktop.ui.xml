<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.main {
			font-family: Verdana, Arial, Helvetica, sans-serif;
			border: 2px dashed #FFC621;
			padding:25px;
			background: #FFF5D9;
			background: rgba(255, 245, 217, 0.95);
			
			color: #DE6525;
		}
		.main td {
			font-family: inherit;
		}
		.message {
			font-size: 1.2em;
			font-family: inherit;
			margin-left:auto;
			margin-right:auto;

		}
	</ui:style>
	<g:VerticalPanel styleName="{style.main}">
		<g:cell verticalAlignment="middle" horizontalAlignment="center">
			<g:Label styleName="{style.message}" ui:field="messageLabel"/>
		</g:cell> 
	</g:VerticalPanel>
</ui:UiBinder> 