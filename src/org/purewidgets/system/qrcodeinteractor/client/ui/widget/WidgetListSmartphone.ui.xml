<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type='org.purewidgets.system.qrcodeinteractor.client.ui.widget.WidgetListUi.Style'>
	.center {
		text-align:center;
	}
	.over {
	background-color: #f4f4f4;
	}
	
	.main {
		height: 100%;
		/*width: 100%;*/
		margin-right:0px;
		padding: 10px 5px 0px 10px;
		/*padding:5px 15px 5px 15px;*/
		font-family:inherit;
		font-size:inherit;
		/*border: 1px solid blue;*/
	}
	
	.main * td {
		font-family:inherit;
		font-size:inherit;
	}
	
	.titleBar {
		width:100%;
	}
	
	.icon  {
		display:none;
	}
	
	.title {
		font-size: 1.5em;
		margin-bottom:25px;
		margin-top:15px;
		text-align: center;
	}
	
	.widgetsPanel {
		width:100%;
		text-align:center;
	}
	
	.back {
		margin-top: 3em;
		width: 100%;
		height: 100%;
		/*background-color: #f4f4f4;*/
		background-image: url('back.png');
		background-repeat: no-repeat;
		background-position: center; 
	}
	
	</ui:style>
	<g:VerticalPanel height="100%" width="100%"> 

		<g:cell>	
		    <g:HTML styleName="{style.title}"><b><span  ui:field="spanApplicationName"/></b> Application</g:HTML>
		</g:cell>
		<g:cell>
			<g:HTMLPanel ui:field="mainPanel"> 
				<g:StackPanel styleName="{style.widgetsPanel}" ui:field="stackPanel"> </g:StackPanel> 
				<g:Label ui:field="labelNoWidgetFound"> No widgets found!</g:Label>
			</g:HTMLPanel>
		</g:cell>
		
		
		<!-- not used in this template -->
		<g:TabPanel styleName="{style.widgetsPanel}" ui:field="tabPanel"> </g:TabPanel>
		<g:Image styleName="{style.icon}" ui:field="applicationIcon"/> 
		
	</g:VerticalPanel>
</ui:UiBinder> 