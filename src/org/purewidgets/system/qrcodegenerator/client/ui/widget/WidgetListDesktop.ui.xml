<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type='org.purewidgets.system.qrcodegenerator.client.ui.widget.WidgetListUi.Style'>
	.center {
		text-align:center;
	}
	.over {
	background-color: #f4f4f4;
	}
	
	.main {
		height: 100%;
		/*width: 100%;*/
		margin-right:0px;
		padding: 10px 5px 0px 10px;
		/*padding:5px 15px 5px 15px;*/
		font-family:inherit;
		font-size:inherit;
		/*border: 1px solid blue;*/
	}
	
	.main * td {
		font-family:inherit;
		font-size:inherit;
	}
	
	.titleBar {
		width:100%;
	}
	
	.icon  {
		width: 64px;
		height: 64px;
	}
	
	.title {
		font-size: 2.5em;
		margin-bottom:25px;
		margin-top:15px;
		text-align: center;
	}
	.appname {
		
		
	}
	.widgetsPanel {
		width:100%;
		text-align:center;
	}
	
	.back {
		width: 100%;
		height: 100%;
		/*background-color: #f4f4f4;*/
		background-image: url('back.png');
		background-repeat: no-repeat;
		background-position: center; 
	}
	
	</ui:style>
	<g:HorizontalPanel height="100%" width="100%"> 
		<g:cell width="100px" height="100%">
			<g:HTML styleName="{style.back}" ui:field="goBackPanel">  </g:HTML>
		</g:cell>
		<g:cell>
			<g:HTMLPanel styleName="{style.main}">
				<g:HorizontalPanel styleName="{style.titleBar}">
					<g:cell width="64px">
		        		<g:Image styleName="{style.icon}" ui:field="applicationIcon"/> 
		    		</g:cell>
		    		<g:cell>
		       			<g:HTML styleName="{style.title}">QR code generator for <b><span  class="{style.appname}" ui:field="spanApplicationName"/></b></g:HTML> 
		    		</g:cell>
			 	</g:HorizontalPanel>
				<g:HTMLPanel ui:field="mainPanel"> 
					<g:TabPanel styleName="{style.widgetsPanel}" ui:field="tabPanel"> </g:TabPanel>
					
					<g:Label ui:field="labelNoWidgetFound"> No widgets found!</g:Label>
				</g:HTMLPanel>
			</g:HTMLPanel>
		</g:cell>
		
		<!--  Not used in this template (removed by code)-->
		<g:StackPanel styleName="{style.widgetsPanel}" ui:field="stackPanel"> </g:StackPanel> 
	</g:HorizontalPanel>
</ui:UiBinder> 