<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.main {
		font-family:inherit;
		font-size:inherit;
		border: 2px solid black;
		border-radius: 15px;
		margin: 10px;
		padding: 15px 15px 15px 15px;
		display: inline-table;
		width: 150px;
		height: 150px;
	}
	.main td {
		font-family:inherit;
		font-size:inherit;
		text-align:center;	
	}
	
	.image {
		width:128px;
		height:128px;
	}
		
	.name {
	}
	</ui:style>
	<g:VerticalPanel styleName="{style.main}">
		<g:cell> <g:Image styleName="{style.image}" ui:field="icon" /></g:cell>
		<g:cell> <g:InlineLabel styleName="{style.name}" ui:field="name"/></g:cell>
	</g:VerticalPanel>
</ui:UiBinder> 