<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.main {
		font-family:inherit;
		font-size:2em;
		border: 1px solid black;
		border-radius: 15px;
		margin-left: auto;
		margin-right: auto;
		margin-bottom: 10px;
		padding: 15px 15px 15px 15px;
		/*display: inline-table;*/
		display: block-table;
		width: 95%;
		height: 100px;
	}
	.main td {
		font-family:inherit;
		font-size:inherit;
		/*text-align:center;*/	
	}
	
	.image {
		width:2cm;
		height:2cm;
		margin-right:5px;
	}
		
	.name {
		padding-left: 0.5cm;
		font-size:1.5em;
	}
	</ui:style>
	<g:HorizontalPanel styleName="{style.main}">
		<g:cell width="64px" verticalAlignment="middle"> <g:Image styleName="{style.image}" ui:field="icon" /></g:cell>
		<g:cell verticalAlignment="middle" > <g:InlineLabel styleName="{style.name}" ui:field="name"/></g:cell>
	</g:HorizontalPanel>
</ui:UiBinder> 