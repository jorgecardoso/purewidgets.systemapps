<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.main {
			display: inline-table;
			border: 1px solid black;
			border-radius: 5px;
			width: 300px;
			height: 100px;
			padding: 5px;
			margin: 5px;
		}
		
		.qrcode {
			
			/*margin-right: 15px;*/
		}
		
	</ui:style>
	<g:VerticalPanel styleName="{style.main}"  >

      		<g:cell verticalAlignment="top" horizontalAlignment="center">
     			<g:Label ui:field="descriptionLabel"> </g:Label>
     		</g:cell>

    		<g:cell horizontalAlignment="center" width="100%">
        		<g:Image styleName="{style.qrcode}" ui:field="qrCodeImage"/> 
    		</g:cell>
    		
	</g:VerticalPanel>
</ui:UiBinder> 